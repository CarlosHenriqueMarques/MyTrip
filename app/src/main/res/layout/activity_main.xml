<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLigthGray"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/editDistance"
            style="@style/mCustomEditTexto"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:hint="@string/Distancia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="@string/total_de_km"
            android:textAllCaps="true"
            android:textColor="@color/colorDarkGray"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/editPrice"
            android:hint="@string/Preco"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            style="@style/mCustomEditTexto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="@string/pre_o_por_litro"
            android:textAllCaps="true"
            android:textColor="@color/colorDarkGray"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/editAutonomy"
            android:hint="@string/Autonomia"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            style="@style/mCustomEditTexto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="@string/km_por_litros"
            android:textAllCaps="true"
            android:textColor="@color/colorDarkGray"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:text="Seu gasto total serÃ¡ de :"
            android:textAllCaps="true"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/red_result"
            android:textSize="35sp"
            android:text="@string/rs_0_00" />

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:textColor="@color/colorLigthGray"
            android:padding="20dp"
            android:background="@drawable/roud_btn"
            android:text="@string/calcular" />
    </LinearLayout>
</ScrollView>